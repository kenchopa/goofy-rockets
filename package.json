{
  "name": "goofy-rockets",
  "version": "0.0.1",
  "description": "The monorepo for storing all related apps about project Goofy Rockets",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "clean": "cross-env pnpm --recursive --parallel --stream run clean && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "gateway": "cross-env pnpm --filter @wgp/gateway",
    "game": "cross-env pnpm --filter @wgp/game",
    "room": "cross-env pnpm --filter @wgp/room",
    "round": "cross-env pnpm --filter @wgp/round",
    "amqp": "cross-env pnpm --filter @wgp/amqp",
    "context": "cross-env pnpm --filter @wgp/context",
    "delayer": "cross-env pnpm --filter @wgp/delayer",
    "errors": "cross-env pnpm --filter @wgp/errors",
    "koa": "cross-env pnpm --filter @wgp/koa",
    "logger": "cross-env pnpm --filter @wgp/logger",
    "tracer": "cross-env pnpm --filter @wgp/tracer",
    "mongodb": "cross-env pnpm --filter @wgp/mongodb",
    "domain": "cross-env pnpm --filter @wgp/domain",
    "build:packages": "cross-env pnpm --filter './packages/**' --recursive run build",
    "build:apps": "cross-env pnpm --filter './apps/**' --recursive run build",
    "build": "cross-env pnpm run build:packages && cross-env pnpm run build:apps",
    "dev": "cross-env pnpm --recursive --parallel --stream run dev",
    "start": "cross-env pnpm --recursive --parallel --stream run start",
    "lint": "cross-env pnpm --recursive --parallel --stream run lint"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [],
  "author": "Kengy Van Hijfte",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^9.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "nodemon": "^3.1.7",
    "prettier": "^2.8.8",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "packageManager": "pnpm@9.12.1+sha512.e5a7e52a4183a02d5931057f7a0dbff9d5e9ce3161e33fa68ae392125b79282a8a8a470a51dfc8a0ed86221442eb2fb57019b0990ed24fab519bf0e1bc5ccfc4"
}
