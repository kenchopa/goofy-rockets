{
  "name": "@wgp/game",
  "description": "Contains the game client for project Goofy Rockets",
  "main": "src/index.ts",
  "scripts": {
    "prebuild": "pnpm run clean",
    "copy-public": "copyfiles -u 1 public/**/* dist/public",
    "clean": "rimraf dist coverage",
    "debug": "nodemon --watch src --ext js,ts,json --watch .env --delay 80ms --exec 'tsc && cross-env NODE_ENV=development node --inspect=0.0.0.0:9229 dist/index.js'",
    "dev": "cross-env TS_NODE_PROJECT=build/tsconfig.cjs.json NODE_ENV=development webpack serve --config build/webpack.ts",
    "prestart": "pnpm run build",
    "start": "cross-env NODE_ENV=production node dist/src/index.js",
    "test": "cross-env NODE_ENV=test jest --no-coverage --runInBand",
    "test:coverage": "cross-env NODE_ENV=test jest",
    "lint": "eslint src/**/* --ext js,ts",
    "lint:fix": "pnpm run lint --fix"
  },
  "dependencies": {
    "@types/lodash": "^4.17.10",
    "@types/uuid": "^10.0.0",
    "@wgp/logger": "workspace:*",
    "dotenv": "^16.0.3",
    "joi": "^17.7.0",
    "koa": "^2.14.1",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "pixi.js": "^8.5.1",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.8.0",
    "tslib": "^2.8.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/css-font-loading-module": "^0.0.9",
    "@types/ip": "^1.1.3",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.7.1",
    "@types/offscreencanvas": "^2019.6.4",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "cross-env": "^6.0.3",
    "css-loader": "^6.5.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.4.0",
    "ip": "^2.0.1",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "sort-package-json": "^1.50.0",
    "style-loader": "^3.3.1",
    "tap-junit": "^3.1.0",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.8.0"
  }
}
