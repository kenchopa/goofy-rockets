{
  "name": "@wgp/room",
  "description": "Contains a microservice that handles rooms for project Goofy Rockets",
  "main": "src/index.ts",
  "scripts": {
    "prebuild": "pnpm run clean",
    "build": "tsc",
    "clean": "rimraf dist coverage",
    "debug": "cross-env nodemon --watch src --ext js,ts,json --watch .env --delay 80ms --exec 'tsc && cross-env NODE_ENV=development node --inspect=0.0.0.0:9229 dist/index.js'",
    "dev": "cross-env nodemon --watch .env --delay 80ms --watch src --ext js,ts,json --exec 'cross-env NODE_ENV=development ts-node src/index.ts'",
    "prestart": "pnpm run build",
    "start": "cross-env NODE_ENV=production node dist/src/index.js",
    "test": "cross-env NODE_ENV=test jest --no-coverage --runInBand",
    "test:coverage": "cross-env NODE_ENV=test jest",
    "lint": "eslint src/**/* --ext js,ts",
    "lint:fix": "pnpm run lint -- --fix"
  },
  "dependencies": {
    "@wgp/amqp": "workspace:^",
    "@wgp/context": "workspace:^",
    "@wgp/domain": "workspace:^",
    "@wgp/errors": "workspace:^",
    "@wgp/koa": "workspace:^",
    "@wgp/logger": "workspace:*",
    "@wgp/mongodb": "workspace:^",
    "@wgp/tracer": "workspace:*",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "joi": "^17.7.0",
    "jwt-decode": "^4.0.0",
    "koa": "^2.14.1",
    "opentracing": "^0.14.7",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "@types/koa": "^2.13.5",
    "cross-env": "^7.0.3"
  }
}
